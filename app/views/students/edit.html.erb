<%= form_for @student, url: {:action => "update"} do |f| %>

<p><%= "please edit the details.".html_safe %></p>
<p>FirstName: <%= f.text_field :name %></p>
<p>LastName: <%= f.text_field :lastname %></p>
<p>Age : <%= f.text_field :age %></p>
<p>Gender : <%= f.radio_button :gender ,'male' %> Male
            <%= f.radio_button :gender ,'female' %> Female </p>
<p>Phoneno : <%= f.number_field :phoneno %></p>
<p>Email: <%= f.email_field :email %></p>
<p>Address : <%= f.text_area :address %></p>
<p>Subject : <%=  f.select :"subject",
"<option>Data modeling</option><option>AWS</option><option>Ruby on Rails</option><option>Java</option>".html_safe , :include_blank=> true %></p>
<%= f.hidden_field :id %>
<p><%= f.submit :"submit" %></p>   

<% end %>