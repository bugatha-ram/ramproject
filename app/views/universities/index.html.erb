<p id="notice"><%= notice %></p>

<h1>Listing students</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Fullname</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Address</th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @universities.each do |university| %>
      <tr>
        <td><%= university.firstname %></td>
        <td><%= university.lastname %></td>
        <td><%= university.fullname %></td>
        <td><%= university.age %></td>
        <td><%= university.gender %></td>
        <td><%= university.phone %></td>
        <td><%= university.email %></td>
        <td><%= university.address %></td>
        <td><%= university.subject %></td>
        <td><%= link_to 'Show', university %></td>
        <td><%= link_to 'Edit', edit_university_path(university) %></td>
        <td><%= link_to 'Destroy', university, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

